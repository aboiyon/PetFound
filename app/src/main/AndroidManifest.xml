<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moringa.petfinder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="PetFinder"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetFinder"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
        </activity>
        <activity
            android:name=".ui.CreateAccountActivity"
            android:exported="false" />
        <activity android:name=".ui.PetDetailActivity" />
        <activity android:name=".ui.SavedPetListActivity" />
        <activity
            android:name=".ui.MainActivity">
<!--            android:exported="true">-->
<!--            android:theme="@style/NoActionBarTheme">-->
        </activity>
        <activity android:name=".ui.PetListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moringa.petfinder.ui.MainActivity" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/com_google_android_gms_fonts_certs_prod" />
    </application>

</manifest>